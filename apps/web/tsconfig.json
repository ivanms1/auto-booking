{
  "exclude": ["node_modules"],
  "extends": "@repo/typescript-config/vite.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "pages/*": ["pages/*"],
      "assets/*": ["assets/*"],
      "services/*": ["services/*"],
      "utils/*": ["utils/*"]
    },
    "moduleResolution": "Bundler",
    "types": ["vite/client", "vite-plugin-svgr/client"]
  },
  "include": ["src", "vite.config.ts"]
}
